<div class="jumbotron mt-4">
    <h1 class="display-4">Curriculum</h1>
    <hr class="my-4">
    <a href="javascript:history.back()" class="btn btn-danger m-2">Volver</a>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Proyecto</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>

        <tbody>

            {{#each notes}}

            <tr>
                <form action="/cur/?_method=GET" method="POST">
                    <input type="hidden" name="_method" value="GET">
                    <th scope="row">{{1}}</th>
                    <td><input class="form-control" name="title" value="{{title}}" readonly></td>
                    <td><input class="form-control" name="description" value="{{description}}" readonly></td>
                    <td>
                        <button type="submit" class="btn btn-success btn-block btn-sm">
                            Imprimir Curriculum
                        </button>
                    </td>
                </form>
            </tr>

            {{/each}}

        </tbody>
    </table>

</div>